from src.utility_funcs import get_unique_labels
import pandas as pd
import os

directories ={'ABIDE' : 'ABIDE/subjects',
              'ADNI' : 'ADNI_Morphology/subjects_CN',
              'DevProso' : 'DevProso/subjects',
               'dHCP' : 'dHCP/subjects',
              'HCP' : 'HCP/subjects',
              'MSC' : 'MSC/subjects',
              'AHBA' : 'AHBA_labeling/AHBA_subs',
               'NH_Primates' : 'NH_Primates/chimp_data',
               'NORA' : 'Nora_PFCSulci/subjects'}


all_df = pd.DataFrame(columns=['dataset', 'label', 'count'])
for dataset, subjects_dir in directories.items():
    weiner_dir = '/home/weiner/'

    full_sd = os.path.join(weiner_dir, subjects_dir)
    
    single_df = get_unique_labels(subjects_dir = full_sd, dataset=dataset)

    all_df = pd.concat([all_df, single_df])


all_df.to_csv('all_labels_all_projects.csv')


